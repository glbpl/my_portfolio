{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "(rsync) my-portfolio fra1-server",
            "type": "shell",
            "command": "rsync",
            "args": [
                "-avz",
                "${workspaceFolder}/",
                "--delete",
                "--force",
                "--exclude='node_modules'",
                "--exclude='.vscode'",
                "--exclude='.git'",
                "--exclude='.DS_Store'",
                "--exclude='.gitignore'",
                "--exclude='.env'",
                "--exclude='package.json'",
                "--exclude='package-lock.json'",
                "--exclude='npm-debug.log'",
                "--exclude='yarn.lock'",
                "--exclude='yarn-error.log'",
                "--exclude='*.log'",
                "root@myserver:/var/www/static/projects/my_portfolio/"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            },
            "dependsOn": [
                "Play Mail Sound"
            ]
        },
        {
            "label": "Play Mail Sound",
            "type": "shell",
            "command": "afplay",
            "args": [
                "/System/Library/Sounds/Submarine.aiff"
            ],
            "presentation": {
                "reveal": "never"
            }
        }
    ]
}